<section id="features" class="features">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="section-heading">
          <h2>See What Markets are Trending</h2>
          <p class="text-muted">See what the long-term trend is saying!</p>
          <hr>
        </div>
      </div>
    </div>
    <div class="trend-titles">
      <div class="container">
        <div class="row">
          <div class="col-sm-3">
            <% if @s_p.last_trade_price_only > @s_p.two_hundredday_moving_average %>
             <%= "The S&P is currently in a long-term up-trend" %>
              <img src="/assets/stock_up.png" class="img-responsive" alt="">
              <% else %>
              <%= "The S&P is currently in a long-term down-trend" %>
               <img src="/assets/stock_down.png" class="img-responsive" alt="">
              <% end %>
              </div>
          <div class="col-sm-3">
            <% if @commodities.last_trade_price_only > @commodities.two_hundredday_moving_average %>
             <%= "Commodities are currently in a long-term up-trend" %>
              <img src="/assets/stock_up.png" class="img-responsive" alt="">
              <% else %>
              <%= "Commodities currently in a long-term down-trend" %>
               <img src="/assets/stock_down.png" class="img-responsive" alt="">
              <% end %>
              </div>
              <div class="col-sm-3">
            <% if @developed.last_trade_price_only > @developed.two_hundredday_moving_average %>
             <%= "Foreign Developed Markets are currently in a long-term up-trend" %>
              <img src="/assets/stock_up.png" class="img-responsive" alt="">
              <% else %>
              <%= "Developed Markets currently in a long-term down-trend" %>
               <img src="/assets/stock_down.png" class="img-responsive" alt="">
              <% end %>
              </div>
              <div class="col-sm-3">
            <% if @emerging.last_trade_price_only > @emerging.two_hundredday_moving_average %>
             <%= "Emerging Markets are currently in a long-term up-trend" %>
              <img src="/assets/stock_up.png" class="img-responsive" alt="">
              <% else %>
              <%= "Emerging Markets currently in a long-term down-trend" %>
               <img src="/assets/stock_down.png" class="img-responsive" alt="">
              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
